<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="newsList"
            type="com.freelance.ric17.mvvm_listview.viewModel.NewsModel" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greenShade"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@color/white"
            android:text="@{newsList.header}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@color/white"
            android:text="@{newsList.desc}" />
    </LinearLayout>

</layout>